{% extends 'base.jinja' %}

{% block title %}{{ object.name }}{% endblock title %}

{% block head %}
    <link href="{{ static("movie/css/quality-selector.css") }}" rel="stylesheet">
    <link href="{{ static("movie/css/video-js.css") }}" rel="stylesheet" />
    <link href="{{ static("movie/css/detail.css") }}" rel="stylesheet">

    <script src="{{ static("movie/js/operations.js") }}"></script>

    <script src="{{ static("movie/js/video.min.js") }}"></script>
    <script src="{{ static("movie/js/silvermine-videojs-quality-selector.min.js") }}"></script>

    <script src="{{ static("movie/js/recommended-movie.js") }}"></script>

     {% if request.user.is_authenticated %}
        <script src="{{ static("movie/js/subscribe.js") }}"></script>
         <script src="{{ static("js/jquery-ui.min.js") }}"></script>
        <script src="{{ static("movie/js/review.js") }}"></script>
        <script src="{{ static("movie/js/rater.min.js") }}" charset="utf-8"></script>
    {% endif %}

    {% if object.style %}
        <style>
            {{ object.style.style }}
        </style>
    {% endif %}

{% endblock head %}

{% block body %}
    <script>
        {% if request.user.is_authenticated %}
            var username = "{{ request.user.username }}";
            var user_logo = "{{ request.user.get_avatar() }}";
        {% endif %}

        var anime_slug = "{{ object.slug }}";
        var anime_pk = {{ object.pk }};
        var season_pk = {{ season.pk }};
    </script>

    {% set images = season.images.all() %}

    <div class="container">
        <div class="row">
            <h4 class="text-center">{{ object }}: {{ season.name }}</h4>

        <div class="col-4">
            <img src="{{ object.poster.url }}" class="img-thumbnail rounded" alt="">
            <hr>
            <p class="text-center">Anime rating: {{ object.rating }}</p>

            {% if images %}
                <center class="mb-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Screenshots</button>
                </center>
            {% endif %}

        </div>

        <div class="col">
            <hr>
            {{ season.description }}
            <hr>
            {% if request.user.is_authenticated %}
                <div id="subscribe" class="mt-3">
                    <button id="unsub" {% if not subscribe %}style="display: none" {% endif %} class="btn btn-secondary">Unsubscribe</button>
                    <button id="sub" {% if subscribe %}style="display: none" {% endif %} class="btn btn-success">Subscribe</button>
                </div>
            {% endif %}
        </div>

        </div>

        <div class="row">

            {% if rating %}
                <div id="rate"></div>

                <script>
                        $("#rate").rate({
                            max_value: {{ settings.max_rating_val }},
                            step_size: {{ settings.min_rating_val }},
                            initial_value: {{ rating }},
                        }).on("change", function(ev, data){
                            if(data.from != data.to) {
                               request("/api/v1/movie/rating/", "POST", "anime="+ {{ object.pk }} + "&val=" + data.to)
                            }

                        });
                </script>
            {% endif %}

            <div id="seasons" class="mb-2" style="border: 2px black solid; border-radius: 10px">
                {% if season_list|length > 1 %}
                    <center>
                        <h4>Seasons</h4>
                    </center>

                    {% for num in season_list %}
                       <a href="{{ url("movie:detail", slug=object.slug, season=num) }}" class="btn {% if season.number == num %}btn-primary{% else %}btn-info{% endif %}">{{ num }}</a>
                    {% endfor %}
                    <div class="mb-2"></div>
                {% endif %}
            </div>

            {% if episode_list|length == 0 %}
                <center>
                    <h4>Episodes not found</h4>
                </center>
            {% else %}

                <div class="mh-10">
                    <video id="my-video" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="auto" data-setup='{"fluid": true}'></video>
                </div>

                <script>
                  var options = {
                       controlBar: {
                          children: [
                             'playToggle',
                             'CurrentTimeDisplay',
                             'TimeDivider',
                             'DurationDisplay',
                             'progressControl',
                             'volumePanel',
                             'qualitySelector',
                             'pictureInPictureToggle',
                             'fullscreenToggle',
                          ],
                       },
                    };
                  var player = videojs('my-video', options, function () {});

                </script>
                <script src="{{ static("movie/js/change-episode.js") }}"></script>
            {% endif %}
            <hr>

            <div id="episode-selector" class="mb-2" style="border: 2px black solid; border-radius: 10px">
                {% if episode_list|length > 1 %}
                    <center>
                        <h3>Episodes</h3>
                    </center>
                    {% for eps in episode_list %}
                        <button pk="{{ eps.pk }}" id="episode-{{ eps.number }}" class="btn btn-info">{{ eps.number }}</button>
                    {% endfor %}
                    <div class="mb-2"></div>
                {% elif episode_list|length == 1 %}
                    <button pk="{{ episode_list[0].pk }}" id="episode-{{ episode_list[0].number }}" style="display: none">{{ episode_list[0].number }}</button>
                {% endif %}
            </div>

            <center>
                {% if form %}
                    <h4 class="text-center">Reviews</h4>
                    <div id="review">
                        {{ form.media }}
                        {{ form.as_p() }}
                        <button class="btn btn-primary btn-sm">Send</button>
                    </div>
                {% endif %}

            <div class="mb-4"></div>
            {% if reviews %}
                <hr>
                <div id="review-list" class="col-md-8 col-lg-6">
                     {% for review in reviews %}
                        <div class="card mb-4">
                          <div class="card-body">
                            {{ review.text|safe }}
                            <div class="d-flex justify-content-between">
                              <div class="d-flex flex-row align-items-center">
                                <img src="{{ review.user.get_avatar() }}" alt="avatar" width="25" height="25" />
                                <p class="small mb-0 ms-2">{{ review.user.username }}</p>
                              </div>
                                <time class="small mb-0 ms-2 text-center">{{ review.datetime|date("M d, Y") }} at {{ review.datetime|date("G:i") }}</time>
                            </div>
                          </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            </center>

        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Screenshots</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">

            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
              </div>
              <div class="carousel-inner">
                  {% for image in images %}
                    <div class="carousel-item {% if image == images|first %}active{% endif %}">
                      <img src="{{ image.file.url }}" class="d-block w-100">
                    </div>
                  {% endfor %}
              </div>
            
             {% if images.count() > 1 %}
            
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            {% endif %}
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


{% endblock body %}