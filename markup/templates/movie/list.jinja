{% extends 'base.jinja' %}

{% block title %}List{% endblock title %}

{% block body %}

    <form method="get">
        {{ filter.form.as_p() }}
        <input type="submit" />
    </form>

    {% if popular_tags %}
        <h4>Popular tags</h4>
        {% for tag in popular_tags %}
            <a href="{{ tag.get_absolute_url() }}">#{{ tag.name }}</a>
        {% endfor %}
        <br>
    {% endif %}

    {% for object in object_list %}
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{ object.poster.url }}" alt="Image cap">
          <div class="card-body">
            <h5 class="card-title">{{ object.name }}</h5>
            <a href="{{ object.get_absolute_url() }}" class="btn btn-primary">Go</a>
          </div>
        </div>
    {% endfor %}

        {% if page_obj.paginator.num_pages > 1 %}
        <nav>
          <ul class="pagination justify-content-center">
              {% if page_obj.has_previous() %}
                   <a class="page-link" href="?page={{ page_obj.previous_page_number() }}">Previous</a>
              {% else %}
                  <li class="page-item disabled">
                      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                  </li>
              {% endif %}

              {% for i in page_obj.paginator.page_range %}
                    {% if page_obj.number|add(-1 - settings.paginator_pages_show) < i < page_obj.number|add(1 + settings.paginator_pages_show) %}
                        {% if i == page_obj.number %}
                            <li class="page-item page-link active">{{ i }}</li>
                        {% else %}
                            <li class="page-item"><a class="page-link" href="?page={{ i }}">{{ i }}</a></li>
                        {% endif %}
                    {% endif %}
              {% endfor %}

              {% if page_obj.has_next() %}
                   <a class="page-link" href="?page={{ page_obj.next_page_number() }}">Next</a>
              {% else %}
                  <li class="page-item disabled">
                      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
                  </li>
              {% endif %}
          </ul>
        </nav>
    {% endif %}

{% endblock body %}